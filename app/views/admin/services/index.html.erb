<div class="row">

  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Planes
      </header>


      <div class="panel-body">


        <!-- /.row -->
        <% if flash[:notice] %>

            <div class="alert alert-success fade in">
              <button data-dismiss="alert" class="close close-sm" type="button">
                <i class="fa fa-times"></i>
              </button>
              <%= flash[:notice] %>
            </div>


        <% end %>


        <div class="adv-table">


          <div id="example_wrapper" class="dataTables_wrapper form-inline" role="grid">



            <table class="display table table-bordered table-striped dataTable" id="example" aria-describedby="example_info">
              <thead>


              <th rowspan="1" colspan="1">Nombre</th>
              <th rowspan="1" colspan="1">Platos</th>
              <th rowspan="1" colspan="1">Precio</th>
              <th rowspan="1" colspan="1">Descuento</th>
              <th rowspan="1" colspan="1">Acciones</th>
              </thead>

              <tfoot>
              <tr>

                <th rowspan="1" colspan="1">Nombre</th>
                <th rowspan="1" colspan="1">Platos</th>
                <th rowspan="1" colspan="1">Precio</th>
                <th rowspan="1" colspan="1">Descuento</th>
                <th rowspan="1" colspan="1">Acciones</th>

              </tfoot>
              <tbody role="alert" aria-live="polite" aria-relevant="all">

              <% @plans.each do |plan| %>
                  <tr>
                    <td><%= plan.name %></td>
                    <td><%= plan.dishes %></td>
                    <td><%= number_to_currency(plan.price) %></td>
                    <td><%= plan.discount %></td>
                    <td>
                      <%= link_to 'Editar', edit_admin_service_path(plan.id), :class=>'btn btn-info' %>

                    </td>
                  </tr>

              <% end %>


              </tbody>
            </table>
            <div class="row-fluid">
              <div class="span6">

              </div>
              <div class="span6"><div class="dataTables_paginate paging_bootstrap pagination">

              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>




<% content_for :head do %>


    <%= stylesheet_link_tag    'admin/advanced-datatable/media/css/demo_page',
                               'admin/advanced-datatable/media/css/demo_table',
                               'admin/data-tables/DT_bootstrap'
    %>


<% end %>
