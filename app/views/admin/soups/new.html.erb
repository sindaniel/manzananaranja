<div class="col-lg-12">
  <section class="panel">
    <header class="panel-heading">
      Agregar Sopa
    </header>
    <div class="panel-body">




    <%= form_for @soup, :url => admin_soups_path, :method=>'post' do |f|  %>


          <div class="form-group">
            <%= f.label :name, 'Nombre', :class=>'col-lg2 col-sm-2 control-label' %>


            <div class="col-lg-10">
                <%= f.text_field :name, :class =>'form-control'  %>
            </div>
          </div>

          <div class="form-group" >

          </div>

          <div class="form-group" >
            <%= f.submit 'Guardar', :class=> 'btn btn-info ' %>
            <%=  link_to 'Cancelar', admin_soups_path, :class=>'btn btn-warning' %>
          </div>


    <% end %>






    </div>
  </section>
</div>