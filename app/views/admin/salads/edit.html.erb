<div class="col-lg-12">
  <section class="panel">
    <header class="panel-heading">
      Editar Ensalada
    </header>
    <div class="panel-body">




      <%= form_for @salad, :url => admin_salad_path, :method=>'PUT' do |f|  %>


          <div class="form-group">
            <%= f.label :name, 'Nombre', :class=>'col-lg2 col-sm-2 control-label' %>


            <div class="col-lg-10">
              <div class="col-lg-10">
                <%= f.text_field :name, :class =>'form-control'  %>
              </div>
            </div>
          </div>

          <div class="form-group" >

          </div>

          <div class="form-group" >
            <%= f.submit 'Guardar', :class=> 'btn btn-info ' %>
            <%=  link_to 'Cancelar', admin_salads_path, :class=>'btn btn-warning' %>
          </div>


      <% end %>






    </div>
  </section>
</div>